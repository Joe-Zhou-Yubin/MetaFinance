package com.expense.claim.repository;

import com.expense.claim.models.ExpenseLineItem;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.util.List;

@Repository
public interface ExpenseLineItemRepository extends JpaRepository<ExpenseLineItem, Long> {

    // Custom method to find line items by expense header ID
    List<ExpenseLineItem> findByExpenseHeaderId(Long expenseHeaderId);

    // Custom method to find unpaid line items by department
    List<ExpenseLineItem> findByExpenseHeader_DepartmentIdAndPaid(Long departmentId, boolean paid);
    
    // Custom method to find approved line items by header ID
    List<ExpenseLineItem> findByExpenseHeaderIdAndApproved(Long expenseHeaderId, boolean approved);
    
    
}
